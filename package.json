{
  "name": "foamstudio",
  "displayName": "FoamStudio",
  "description": "This an extension for OpenFOAM in the vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "openfoam",
        "extensions": [
          ".dict",
          "controlDict",
          "fvSchemes",
          "fvSolution",
          "caseSetupDict",
          "decomposeParDict",
          "fvOptions",
          "helyxHexMeshDict",
          "probesLocation",
          "surfaceFeatureExtractDict",
          "surfaceIntersectionDict",
          "topoSetDict"
        ],
        "aliases": [
          "OpenFOAM"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "openfoam",
        "scopeName": "source.openfoam",
        "path": "./syntaxes/openfoam.tmLanguage.json"
      }
    ],
    "colors": [
      {
        "id": "openfoam.block",
        "description": "Color for OpenFOAM block nodes",
        "defaults": {
          "dark": "#569CD6",
          "light": "#0000FF",
          "highContrast": "#569CD6"
        }
      },
      {
        "id": "openfoam.keyValue",
        "description": "Color for OpenFOAM key-value nodes",
        "defaults": {
          "dark": "#4EC9B0",
          "light": "#008000",
          "highContrast": "#4EC9B0"
        }
      },
      {
        "id": "openfoam.key",
        "description": "Color for OpenFOAM key nodes",
        "defaults": {
          "dark": "#DCDCAA",
          "light": "#795E26",
          "highContrast": "#DCDCAA"
        }
      },
      {
        "id": "openfoam.value",
        "description": "Color for OpenFOAM value nodes",
        "defaults": {
          "dark": "#CE9178",
          "light": "#A31515",
          "highContrast": "#CE9178"
        }
      },
      {
        "id": "openfoam.keyColor",
        "description": "Color for OpenFOAM keys",
        "defaults": {
          "dark": "#4FC3F7",
          "light": "#0277BD"
        }
      },
      {
        "id": "openfoam.valueColor",
        "description": "Color for OpenFOAM values",
        "defaults": {
          "dark": "#81C784",
          "light": "#388E3C"
        }
      }
    ],
    "commands": [
      {
        "command": "foamstudio.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
