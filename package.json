{
  "name": "foamstudio",
  "displayName": "FoamStudio",
  "description": "Advanced OpenFOAM support for VS Code",
  "version": "0.2.0",
  "publisher": "Arefhm94",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "openfoam",
    "cfd",
    "simulation"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arefhm94/foamstudio.git"
  },
  "contributes": {
    "languages": [
      {
        "id": "openfoam",
        "extensions": [
          ".dict",
          "controlDict",
          "fvSchemes",
          "fvSolution",
          "caseSetupDict",
          "decomposeParDict",
          "fvOptions",
          "helyxHexMeshDict",
          "probesLocation",
          "surfaceFeatureExtractDict",
          "surfaceIntersectionDict",
          "topoSetDict"
        ],
        "aliases": [
          "OpenFOAM",
          "openfoam"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "openfoam",
        "scopeName": "source.openfoam",
        "path": "./syntaxes/openfoam.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "foamstudio.helloWorld",
        "title": "Hello World",
        "category": "FoamStudio"
      },
      {
        "command": "foamstudio.formatDocument",
        "title": "Format Document",
        "category": "FoamStudio"
      },
      {
        "command": "foamstudio.validateSyntax",
        "title": "Validate Syntax",
        "category": "FoamStudio"
      },
      {
        "command": "foamstudio.revealLine",
        "title": "Reveal Line",
        "category": "FoamStudio"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "openfoamOutline",
          "name": "OpenFOAM Outline",
          "when": "resourceExtname == .dict || resourceFilename == controlDict || resourceFilename == fvSchemes || resourceFilename == fvSolution"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == openfoam",
          "command": "foamstudio.formatDocument",
          "group": "1_modification"
        },
        {
          "when": "resourceLangId == openfoam",
          "command": "foamstudio.validateSyntax",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "foamstudio.formatDocument",
        "key": "alt+shift+f",
        "when": "resourceLangId == openfoam"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
